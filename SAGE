<div id="map" class="page">
  <button onclick="startCamera()">Start Mapping</button><br><br>
  <video id="video" autoplay></video>
</div>

<script>
  function showPage(id) {
    document.querySelectorAll('.page').forEach(p => p.classList.remove('active'));
    document.getElementById(id).classList.add('active');
  }

  let notes = [
    "The soil is too acidic",
    "It's time to use pesticides",
    "It's time to use weedicides"
  ];
  let index = 0;

  function addNote() {
    if (index < notes.length) {
      let p = document.createElement("p");
      p.innerText = notes[index++];
      document.getElementById("notify").appendChild(p);
    }
  }

  function startCamera() {
    navigator.mediaDevices.getUserMedia({ video: true })
      .then(stream => {
        document.getElementById("video").srcObject = stream;
      });
  }
</script>

